{
  "name": "hasura",
  "version": "1.0.0",
  "scripts": {
    "start": "run-p start:*",
    "start:server": "run-p hasura:server auto:migrate",
    "start:console": "run-s wait-for-api hasura:console",
    "hasura:server": "docker-compose up --abort-on-container-exit",
    "hasura:console": "hasura console --console-port 8000 --api-port 8001",
    "hasura:migrate": "hasura migrate apply",
    "prod:console": "hasura console --endpoint https://platform-hasura.onrender.com",
    "prod:migrate": "hasura migrate apply --endpoint https://platform-hasura.onrender.com",
    "auto:migrate": "run-s wait-for-api hasura:migrate",
    "wait-for-api": "wait-on http-get://localhost:8080/healthz"
  },
  "devDependencies": {
    "hasura-cli": "1.0.0-rc.1",
    "npm-run-all": "4.1.5",
    "wait-on": "3.3.0"
  },
  "private": true
}
