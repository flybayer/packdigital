{
  "compilerOptions": {
    "strict": true,
    "target": "ES2019",
    "module": "commonjs",
    "esModuleInterop": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "allowJs": true,
    "forceConsistentCasingInFileNames": true
  },
  "noUnusedNonleadingParameters": false,
  "exclude": ["node_modules"],
  "include": ["**/*.ts", "**/*.tsx"]
}
